PROJECT_NAME = accurity
PYTHON_VERSION = 3.8

#################################################################################
# COMMANDS                                                                      #
#################################################################################

env:
	cp .env_tmpl .env
	nano .env

app:
	uvicorn src.entrypoints.fastapi:app --host 0.0.0.0 --port 8000

test:
	coverage run -m pytest
